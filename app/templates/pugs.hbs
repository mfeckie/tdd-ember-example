<div class="ui grid">
  <div class="twelve wide column">
    <div class="ui cards">
      {{#each model as |pug|}}
      <div class="ui card">
        <div class="ui content">
          <div class="ui bordered circular image">
            <img src="pug.jpeg" alt="" />
          </div>
          <div class="header">
            {{pug.author}}
          </div>
          <div class="meta">
            {{pug.date}}
          </div>
          <div class="description">
            <a href="{{pug.url}}">{{pug.id}}</a>
          </div>
        </div>
        <div class="ui extra content">
          <i class="heart icon"></i>
          <a href="#">{{pug.score}}</a>
        </div>
      </div>
      {{/each}}
    </div>

  </div>
</div>
